#!/usr/bin/perl -w

=head1 NAME

example-server - Net::GPSD::Server::Fake example

=cut

use strict;
use lib q{../lib};
use lib q{./lib};
use Net::GPSD::Server::Fake;

my $port=shift()||q{2947};

my $server=Net::GPSD::Server::Fake->new(port=>$port)
               || die("Error: Cannot create server object.");

$server->start(lat=>38.865826,
               lon=>-77.108574,
               speed=>25,
               heading=>45.3);
