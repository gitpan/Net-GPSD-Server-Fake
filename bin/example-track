#!/usr/bin/perl -w

=head1 NAME

example-server - Net::GPSD::Server::Fake example

=cut

use strict;
use lib q{../lib};
use lib q{./lib};
use Net::GPSD::Server::Fake;
use Net::GPSD::Server::Fake::Track;

my $server=Net::GPSD::Server::Fake->new(port=>2947)
               || die("Error: Cannot create server object.");

my $track=Net::GPSD::Server::Fake::Track->new(lat=>38.865826,
                                              lon=>-77.108574,
                                              speed=>25,
                                              heading=>45.3);

$server->start($track);
